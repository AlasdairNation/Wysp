/* Active state for tab view */
QFrame {
    background-color: #d4d4dd;
    border: 1px solid #8caabe;
}

QTabBar::tab {
    background-color: #C3CAD6;
    color: #2E3440;
    padding: 6px;
    border-radius: 2px;
    margin: 2px;
}

QTabBar::tab:selected {
    background-color: #8CAABE;
    color: #2E3440;
}

QTabBar::tab:hover:selected {
    background-color: #8CAABE;
    color: #2E3440;
}

QTabBar::tab:hover {
    background-color: #D8DEE9;
    color: #2E3440;
}